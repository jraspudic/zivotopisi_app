<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <link rel="stylesheet" href="css/CreateProfesor.css" />
    <title>Dodaj Profesora</title>
  </head>
  <body>
    <h3>Dodaj profesora</h3>

    <div>
      <form action="/" method="post">
        <label for="fname">Ime</label>
        <input type="text" id="fname" name="profesor[ime]" placeholder="Ime" />

        <label for="lname">Prezime</label>
        <input
          type="text"
          id="lname"
          name="profesor[prezime]"
          placeholder="Prezime"
        />

        <label for="mail">Mail</label>
        <input type="text" id="mail" name="profesor[mail]" placeholder="Mail" />

        <label for="ustanovaZaposlenja">Ustanova Zaposlenja</label>
        <select name="profesor[ustanovaZaposlenja]" id="ustanovaZaposlenja">
          <% fakulteti.forEach(function(fakultet){ %>
          <option value="<%-fakultet._id%>">
            <%- fakultet.naziv %>
          </option>
          <% }); %>
        </select>

        <input type="submit" value="Submit" />
      </form>
    </div>
  </body>
</html>
